#!/usr/bin/env bash
# Pre-commit hook for Birda project
# Runs formatting, linting, and GitHub Actions validation

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "üîç Running pre-commit checks..."

# Track if any check fails
FAILED=0

# Get list of staged files
STAGED_RS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.rs$' || true)
STAGED_WORKFLOW_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '^\.github/workflows/.*\.ya\?ml$' || true)

# 1. Check Rust formatting
if [ -n "$STAGED_RS_FILES" ]; then
    echo ""
    echo "üìù Checking Rust formatting..."
    if ! cargo fmt --check; then
        echo -e "${RED}‚ùå Formatting check failed!${NC}"
        echo -e "${YELLOW}üí° Run 'cargo fmt' to fix formatting issues${NC}"
        FAILED=1
    else
        echo -e "${GREEN}‚úÖ Formatting check passed${NC}"
    fi
fi

# 2. Run Clippy
if [ -n "$STAGED_RS_FILES" ]; then
    echo ""
    echo "üîé Running Clippy..."
    if ! cargo clippy --all-targets --all-features -- -D warnings; then
        echo -e "${RED}‚ùå Clippy found issues!${NC}"
        echo -e "${YELLOW}üí° Fix the issues above or run 'cargo clippy --fix' for automatic fixes${NC}"
        FAILED=1
    else
        echo -e "${GREEN}‚úÖ Clippy check passed${NC}"
    fi
fi

# 3. Check GitHub Actions workflows with actionlint
if [ -n "$STAGED_WORKFLOW_FILES" ]; then
    echo ""
    echo "‚öôÔ∏è  Checking GitHub Actions workflows..."

    # Check if actionlint is installed
    if ! command -v actionlint &> /dev/null; then
        echo -e "${YELLOW}‚ö†Ô∏è  actionlint is not installed, skipping workflow validation${NC}"
        echo -e "${YELLOW}üí° Install with: go install github.com/rhysd/actionlint/cmd/actionlint@latest${NC}"
        echo -e "${YELLOW}   Or see: https://github.com/rhysd/actionlint#installation${NC}"
    else
        # Run actionlint on staged workflow files
        for file in $STAGED_WORKFLOW_FILES; do
            if [ -f "$file" ]; then
                if ! actionlint "$file"; then
                    echo -e "${RED}‚ùå actionlint found issues in $file${NC}"
                    FAILED=1
                fi
            fi
        done

        if [ $FAILED -eq 0 ]; then
            echo -e "${GREEN}‚úÖ GitHub Actions validation passed${NC}"
        fi
    fi
fi

# Exit with appropriate status
if [ $FAILED -eq 1 ]; then
    echo ""
    echo -e "${RED}‚ùå Pre-commit checks failed!${NC}"
    echo -e "${YELLOW}üí° Fix the issues above and try again${NC}"
    exit 1
fi

echo ""
echo -e "${GREEN}‚úÖ All pre-commit checks passed!${NC}"
exit 0
